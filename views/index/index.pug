extends ../partials/header
block main
  - const chainInfo1 = JSON.stringify(chainInfo);

  .all-wrapper-container
    input#chainInfoElement(style='display: none;' type="text" value=chainInfo1)
    br
    p.selectNetworkLabel choose network
    .buttonStyle
      button#mainnet.button.connectStyle Mainnet
      .tokenWrapper
        img#tokenImg(src=Object.values(listOfToken)[0].img_url width='60px' height='60px')
        span#tokenName #{Object.values(listOfToken)[0].coin_denom}
    .mainStyle
      .eachRow
        p#walletchain Chain
        p#walletchainValue #{Object.keys(listOfToken)[0]}
      .eachRow
        p#walletAdd Address
        p#walletAddValue -
      .eachRow
        p#walletToken Token
        p#walletTokenValue #{Object.values(listOfToken)[0].coin_denom}
      .eachRow
        p#walletBal Balance
        p#walletBalValue -
      input#amount.inputStyle(type='text')
    .buttonStyle
      button#connect.button.connectStyle Connect
      button#stake.button.connectStyle Stake
  #tokenModal.modal
    .modal-content
      span.close &times;
      h2 Choose Token
      .token-list
        - Object.keys(listOfToken).forEach(tokenName => {
          .token-tile
            img(src=listOfToken[tokenName].img_url alt=tokenName width='50' height='50' class='tokenimage')
            span.tokenimage #{tokenName}
            input#tokenId(style='display:none' type='text' value=listOfToken[tokenName].chain_id)
        - });